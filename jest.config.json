{
  "preset": "ts-jest",
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    ".+\\.(css|scss)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testPathIgnorePatterns": ["/node_modules/", "/public/"],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node",
    "scss"
  ],
  "testEnvironment": "jest-environment-jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/config/setupTests.ts"]
}